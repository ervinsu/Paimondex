<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/detail"
        motion:constraintSetStart="@id/start"
        motion:duration="350" />

    <Transition
        motion:constraintSetEnd="@id/swipeLeft"
        motion:constraintSetStart="@id/detail"
        motion:duration="100">

        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:onTouchUp="autoComplete"
            motion:touchAnchorSide="left" />

        <KeyFrameSet>

            <KeyPosition
                motion:drawPath="path"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/cl_detail"
                motion:percentX="0.5"
                motion:percentY="0.1" />
            <KeyAttribute
                motion:motionTarget="@+id/cl_detail"
                motion:framePosition="75"
                android:rotation="-40" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/swipeRight"
        motion:constraintSetStart="@id/detail"
        motion:duration="100">

        <OnSwipe
            motion:dragDirection="dragRight"
            motion:onTouchUp="autoComplete"
            motion:touchAnchorSide="right" />

        <KeyFrameSet>

            <KeyPosition
                motion:drawPath="path"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/cl_detail"
                motion:percentX="0.5"
                motion:percentY="-0.1" />
            <KeyAttribute
                motion:motionTarget="@+id/cl_detail"
                motion:framePosition="75"
                android:rotation="40" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bnv_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/cl_detail"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toBottomOf="@+id/app_bar_main"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toTopOf="@id/bnv_menu"
            motion:layout_constraintTop_toBottomOf="@id/toolbar"
            android:id="@+id/cl_detail_back"
            motion:layout_constraintVertical_bias="1.0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/detail">
        <Constraint
            android:id="@+id/bnv_menu"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/cl_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/bnv_menu"
            motion:layout_constraintTop_toBottomOf="@id/toolbar" />

        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="1" />

        <Constraint
            android:id="@id/cl_detail_back">
            <Transform
                android:scaleX="0.90"
                android:scaleY="0.90" />
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toTopOf="@id/bnv_menu"
                motion:layout_constraintTop_toBottomOf="@id/toolbar" />

        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/swipeLeft"
        motion:deriveConstraintsFrom="@id/detail">
        <Constraint
            android:id="@id/cl_detail_back">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
        <Constraint
            android:id="@id/cl_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="700dp"
            android:layout_marginBottom="20dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintWidth_percent="0.7" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/swipeRight"
        motion:deriveConstraintsFrom="@id/detail">
        <Constraint
            android:id="@id/cl_detail_back">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
        <Constraint
            android:id="@id/cl_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="700dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintWidth_percent="0.7" />
    </ConstraintSet>
</MotionScene>
